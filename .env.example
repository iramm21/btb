# .env.example â€” Environment manifest for Beat the Bet
# Copy to .env.local and fill in secrets before running locally.

# Base URL for the app; used for server-to-server fetches
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase project credentials
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Database connection string
# For local development use SQLite: file:./.tmp/dev.db
# For production use the Supabase Postgres URI
DATABASE_URL=file:./.tmp/dev.db

# Sportradar configuration
SPORTRADAR_API_KEY=
SPORTRADAR_ACCESS_LEVEL=trial
SPORTRADAR_LOCALE=en
SPORTRADAR_SEASON_ID=sr:season:xxxxx

# Weather API base
OPENMETEO_BASE=https://api.open-meteo.com/v1/forecast

# Application secrets (generate strong values and rotate periodically)
JWT_SECRET=
CRON_INGEST_SECRET=

# Admin configuration
# Comma-separated user IDs allowed to access /admin
ADMIN_USER_IDS=

# Authentication mode: leave blank in production; set "mock" in CI/tests
AUTH_MODE=mock

# Node environment (production in deployed envs)
NODE_ENV=production
